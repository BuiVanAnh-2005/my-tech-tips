rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Cho phép mọi người đọc file JSON hoặc ảnh
      allow read: if true;

      // Chỉ bạn (người đã đăng nhập Firebase) mới upload/chỉnh sửa
      allow write: if request.auth != null;
    }
  }
}
